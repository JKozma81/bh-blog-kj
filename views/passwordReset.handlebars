<div class="container-fluid d-flex justify-content-center align-items-center login-container flex-column">
    {{#if error}}
    <div class="alert alert-danger text-center" role="alert">
        {{error}}
    </div>
    {{/if}}
    <form class="p-3 border login-form needs-validation" action="/passwordreset" method="POST">
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password: </label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password"
                    required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputConfirmPassword" class="col-sm-2 col-form-label">Confirm password: </label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputConfirmPassword" placeholder="Confirm Password"
                    name="confirm_password" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="container-fluid d-flex justify-content-end col-sm-12">
                <input type="text" name="account_id" value="{{resetInfo.account_id}}" tabindex="-1" hidden>
                <input type="text" name="reset_id" value="{{resetInfo.id}}" tabindex="-1" hidden>
                <div class="col-sm-2 p-0">

                </div>
                <div class="col-sm-10 p-1">
                    <button type="submit" class="btn btn-primary col-sm-12">Reset Password</button>
                </div>
                <div class="alert alert-danger mt-2 password-error d-none" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


<script>
    (function () {
        window.addEventListener('load', function () {
            const forms = document.getElementsByClassName('needs-validation');
            const validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }

                    if (document.querySelector('#inputPassword').value !== document.querySelector('#inputConfirmPassword').value) {
                        event.preventDefault();
                        document.querySelector('.password-error').textContent = 'Password and Confirm password does not match!';
                        document.querySelector('.password-error').classList.remove('d-none');
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>