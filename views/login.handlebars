<div class="container-fluid d-flex justify-content-center align-items-center login-container flex-column">
    <form class="p-3 border login-form needs-validation" action="/login" method="POST">
        <div class="container-fluid d-flex justify-content-center m-2">
            <img src="/img/login.png" alt="user icon" class="icon">
        </div>
        <div class="form-group row">
            <label for="username" class="col-sm-2 col-form-label">Username: </label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" placeholder="Username" name="username"
                    {{#if username}}value="{{username}}" {{/if}} required>
            </div>
        </div>
        <div class="form-group row">
            <label for="inputPassword" class="col-sm-2 col-form-label">Password: </label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password"
                    {{#if password}}value="{{password}}" {{/if}} required>
            </div>
        </div>
        <div class="form-group row">
            <div class="container-fluid d-flex justify-content-end col-sm-12">
                <div class="col-sm-2"></div>
                <div class="col-sm-10 p-1">
                    <button type="submit" class="btn btn-primary col-sm-12">Login</button>
                    {{#if errorMsg}}
                    <div class="alert alert-danger mt-2" role="alert">
                        {{errorMsg}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/if}}
                    {{#if logoutMsg}}
                    <div class="alert alert-success mt-2" role="alert">
                        {{logoutMsg}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </form>
</div>


{{#if username}}
<script>
    window.addEventListener('load', function () {
        window.dispatchEvent('load');
        document.querySelector('.needs-validation').submit();
    })
</script>
{{/if}}

