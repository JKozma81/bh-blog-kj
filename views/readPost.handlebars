<div class="container-fluid read-post-header d-flex flex-column justify-content-center align-items-center bg-light">
  <h1>{{siteTitle}}</h1>
</div>

{{#if error}}
<div class="alert alert-danger text-center" role="alert">
  {{error}}
</div>
{{/if}}

<div class="container-fluid post-info border pt-5 pb-5 d-flex mb-3 row">

  <div class="container-fluid col-6">
    <h3>{{post.title}}</h3>
    <strong>Author: {{post.author}}</strong>
  </div>
  <div class="container-fluid col-6 text-right">
    <h5>{{post.created_at}}</h5>
    <em>Last modified at: {{post.modified_at}}</em>
  </div>
</div>

<div class="container-fluid post-content">
  <div class="container-fluid h-100" id="editor">

  </div>
  <input name="content" type="hidden" id="post_content" value='{{post.content}}'>
</div>


<script>
  window.addEventListener('load', () => {
    const options = {
      modules: {
        toolbar: false
      },
      readOnly: true,
      theme: 'snow'
    };
    const editor = new Quill('#editor', options);

    let blogPostContent;
    blogPostContent = document.querySelector('#post_content').value;
    editor.root.innerHTML = blogPostContent;
  })
</script>